@model SEP490_G87_Vita_Nutrient_System_Client.Models.NutritionTargetsDaily

<div class="container">
    <h2>Edit - My Nutrition Targets</h2>

    <form asp-action="EditNutritionTargetsDaily" method="post">
        <!-- Title -->
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Calories -->
        <div class="form-group">
            <label asp-for="Calories">Calories</label>
            <input asp-for="Calories" class="form-control" />
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>

        <!-- Target Macros -->
        <h4>Target Macros</h4>
        <div class="form-group">
            <label>Calculate macros</label>
            <select class="form-control">
                <option value="within">Within a range</option>
            </select>
        </div>

        <!-- Carbs -->
        <div class="form-group">
            <label>Carbs (g)</label>
            <input asp-for="CarbsMin" type="number" class="form-control d-inline-block" style="width: 80px;" placeholder="Min" />
            <span>to</span>
            <input asp-for="CarbsMax" type="number" class="form-control d-inline-block" style="width: 80px;" placeholder="Max" />
            <span asp-validation-for="CarbsMin" class="text-danger"></span>
            <span asp-validation-for="CarbsMax" class="text-danger"></span>
        </div>

        <!-- Fats -->
        <div class="form-group">
            <label>Fats (g)</label>
            <input asp-for="FatsMin" type="number" class="form-control d-inline-block" style="width: 80px;" placeholder="Min" />
            <span>to</span>
            <input asp-for="FatsMax" type="number" class="form-control d-inline-block" style="width: 80px;" placeholder="Max" />
            <span asp-validation-for="FatsMin" class="text-danger"></span>
            <span asp-validation-for="FatsMax" class="text-danger"></span>
        </div>

        <!-- Protein -->
        <div class="form-group">
            <label>Protein (g)</label>
            <input asp-for="ProteinMin" type="number" class="form-control d-inline-block" style="width: 80px;" placeholder="Min" />
            <span>to</span>
            <input asp-for="ProteinMax" type="number" class="form-control d-inline-block" style="width: 80px;" placeholder="Max" />
            <span asp-validation-for="ProteinMin" class="text-danger"></span>
            <span asp-validation-for="ProteinMax" class="text-danger"></span>
        </div>

        <!-- Micronutrients -->
        <h4>Micronutrients</h4>

        <!-- Minimum Fiber -->
        <div class="form-group">
            <label asp-for="MinimumFiber">Minimum Fiber (g)</label>
            <input asp-for="MinimumFiber" type="number" class="form-control" />
            <span asp-validation-for="MinimumFiber" class="text-danger"></span>
        </div>

        @* <!-- Limit Daily Sodium -->
        <div class="form-check">
            <input asp-for="LimitDailySodium" class="form-check-input" type="checkbox" />
            <label asp-for="LimitDailySodium" class="form-check-label">Limit Daily Sodium</label>
        </div>

        <!-- Limit Daily Cholesterol -->
        <div class="form-check">
            <input asp-for="LimitDailyCholesterol" class="form-check-input" type="checkbox" />
            <label asp-for="LimitDailyCholesterol" class="form-check-label">Limit Daily Cholesterol</label>
        </div> *@

        <!-- Save Button -->
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="MealSettingsDetailToList" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
