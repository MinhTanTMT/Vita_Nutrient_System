@model List<FoodItem>
@{
    ViewData["Title"] = "Thực phẩm yêu thích";
}

<div class="container mt-5 page-content">
    <h2 class="text-center">Bộ sưu tập thực phẩm yêu thích</h2>

    <!-- Thanh tìm kiếm -->
    <div class="row mb-4">
        <div class="col-md-6 offset-md-3">
            <form method="get" class="input-group">
                <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Tìm kiếm thực phẩm..." />
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </form>
        </div>
    </div>

    <!-- Bảng thực phẩm yêu thích -->
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Hình ảnh</th>
                <th>Tên</th>
                <th>Mô tả</th>
                <th>Đánh giá</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var food in Model)
            {
                <tr>
                    <td>
                        <img src="@food.UrlImage" alt="Hình ảnh" class="rounded" width="50" height="50" />
                    </td>
                    <td>@food.Name</td>
                    <td>@food.Describe</td>
                    <td>@food.Rate</td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm" onclick="unlikeFood(@food.FoodListId)">Bỏ thích</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <nav aria-label="Điều hướng trang" class="d-flex justify-content-center">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="10" asp-route-search="@ViewBag.Search">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

<script>
    async function unlikeFood(foodId) {
        try {
            console.log(foodId);
            const response = await fetch(`@Url.Action("UnlikeFood", "User")?foodId=${foodId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            });

            const result = await response.json();

            if (result.success) {
                alert("Bỏ thích thành công.");
                location.reload();
            } else {
                alert(result.message || "Không thể bỏ thích thực phẩm.");
            }
        } catch (error) {
            console.error("Lỗi khi bỏ thích thực phẩm:", error);
            alert("Lỗi khi bỏ thích thực phẩm.");
        }
    }
</script>
