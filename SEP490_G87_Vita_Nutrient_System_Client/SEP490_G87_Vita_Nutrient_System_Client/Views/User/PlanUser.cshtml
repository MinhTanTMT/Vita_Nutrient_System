                        data: JSON.stringify(data),
                        success: function (response) {
                            console.log("Response from server:", response);
                        },
                        error: function (xhr, status, error) {
                            console.error("Error occurred:", error);
                        }
                    });

                    //alert(' slotOfTheDay ' + slotOfTheDay + ' settingDetail ' + settingDetail + ' idFood ' + idFood + ' statusSymbol ' + statusSymbol + ' userId ' + userId + ' myDay ' + myDay + ' positionFood ' + positionFood);
                }


                function formatDateToISOWithoutTimezone(dateString) {
                    const date = new Date(dateString);

                    const year = date.getFullYear();
                    const month = String(date.getMonth() + 1).padStart(2, '0'); // Tháng từ 0-11, nên cộng 1
                    const day = String(date.getDate()).padStart(2, '0');
                    const hours = String(date.getHours()).padStart(2, '0');
                    const minutes = String(date.getMinutes()).padStart(2, '0');
                    const seconds = String(date.getSeconds()).padStart(2, '0');

                    // Tạo chuỗi ISO mà không điều chỉnh theo múi giờ
                    return `${year}-${month}-${day}T${hours}:${minutes}:${seconds}Z`;
                }



            </script>




            <script>
                function toggleMenu(index) {
