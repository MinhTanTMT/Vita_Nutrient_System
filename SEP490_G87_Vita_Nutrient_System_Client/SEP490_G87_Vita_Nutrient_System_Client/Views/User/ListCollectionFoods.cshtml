@{
    ViewBag.Title = "Bộ Sưu Tập Thực Phẩm Của Bạn";
}

<div class="container mt-5">
    <h2 class="text-center">Bộ Sưu Tập Thực Phẩm Của Bạn</h2>

    <!-- Tìm kiếm -->
    <div class="row mb-4">
        <div class="col-md-6 offset-md-3">
            <form method="get" class="input-group">
                <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Tìm kiếm thực phẩm..." />
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </form>
        </div>
    </div>

    <!-- Thông báo thành công hoặc lỗi -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Bảng danh sách món ăn -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên</th>
                    <th>Mô tả</th>
                    <th>Đánh giá</th>
                    <th>Thời gian chuẩn bị</th>
                    <th>Thời gian nấu</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var food in Model)
                {
                    <tr>
                        <td>
                            <img src="@food.UrlImage" alt="Hình ảnh" class="rounded" width="50" height="50" />
                        </td>
                        <td>@food.Name</td>
                        <td>@food.Describe</td>
                        <td>@food.Rate (dựa trên @food.NumberRate đánh giá)</td>
                        <td>@food.PreparationTime phút</td>
                        <td>@food.CookingTime phút</td>
                        <td>
                            <!-- Nút hủy món ăn khỏi bộ sưu tập -->
                            <form action="@Url.Action("SaveFoodCollection", new { foodId = food.FoodListId })" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Phân trang -->
    <div>
        <span>Trang @ViewBag.CurrentPage của @ViewBag.TotalPages</span>
    </div>
    <div class="d-flex justify-content-center mt-4">
        
        <div>
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("ListCollectionFoods", new { page = i, pageSize = 10, search = ViewBag.Search })">@i</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<!-- Tùy chỉnh thêm CSS cho giao diện -->
<style>
    .pagination-container {
        margin-top: 20px;
    }

        .pagination-container .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }

    .table td, .table th {
        vertical-align: middle;
    }
</style>
