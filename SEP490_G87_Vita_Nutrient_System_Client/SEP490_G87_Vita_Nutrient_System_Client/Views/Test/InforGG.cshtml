@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container text-center mt-5">
    <h1 class="mb-4">Chào mừng, @ViewData["Name"]!</h1>
    <p>Email của bạn: @ViewData["Email"]</p>

    <form method="post" asp-action="/Test/Logout">
        <button type="submit" class="btn btn-danger btn-lg">Đăng xuất</button>
    </form>
</div>

<style>
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #c82333;
    }
</style>