@model IEnumerable<SEP490_G87_Vita_Nutrient_System_Client.Models.ArticlesNewsDTO>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">

<div class="container">
    <h1 class="page-title">Tin Tức Dinh Dưỡng</h1>
    <form asp-action="IndexForUsers" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchTitle" class="form-control" placeholder="Tìm kiếm theo tiêu đề" value="@ViewData["searchTitle"]" />
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
    </form>
    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <a href="@Url.Action("DetailsForUsers", "News", new { id = article.Id })" class="text-decoration-none text-dark">
                        <div class="img-container">
                            <img src="@article.HeaderImage" alt="Header Image" class="article-image card-img-top">
                        </div>
                    </a>
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@article.Title</h5>
                        <p class="card-date text-muted">
                            @article.DateCreated?.ToString("dd/MM/yyyy")
                        </p>
                        <p class="card-text text-truncate">@Html.Raw(article.Content.Substring(0, Math.Min(article.Content.Length, 150)))...</p>
                        <div>
                            @if (article.NumberRate > 0)
                            {
                                <div class="star-rating">
                                    @{
                                        int fullStars = (int)Math.Floor(article.Rate ?? 0);
                                        bool hasHalfStar = (article.Rate % 1) >= 0.5;
                                    }

                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= fullStars)
                                        {
                                            <i class="fa fa-star text-warning"></i>
                                        }
                                        else if (i == fullStars + 1 && hasHalfStar)
                                        {
                                            <i class="fa fa-star-half-alt text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-star text-secondary"></i>
                                        }
                                    }
                                    <p>@article.Rate/5 - (@article.NumberRate bình chọn)</p>
                                </div>
                            }
                            else
                            {
                                <p>Chưa có đánh giá</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* General Styles */
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f9fafb;
    }

    .container {
        max-width: 100%;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    /* Page Title Styling */
    .page-title {
        font-size: 36px;
        margin-bottom: 30px;
        color: #0056D2;
        font-weight: bold;
        text-align: center;
        font-family: 'Roboto', sans-serif;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    /* Article Card Styling */
    .card {
        border-radius: 16px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #fff;
        padding-bottom: 10px;
    }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

    .card-title {
        font-size: 20px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
        font-family: 'Roboto', sans-serif;
    }

    .card-date {
        font-size: 14px;
        color: #888;
        margin-bottom: 8px;
    }

    .card-text {
        font-size: 15px;
        color: #555;
        font-family: 'Roboto', sans-serif;
        line-height: 1.6;
    }

    /* Article Image Styling */
    .img-container {
        overflow: hidden;
        border-top-left-radius: 16px;
        border-top-right-radius: 16px;
        max-height: 180px;
    }

    .article-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        transition: transform 0.3s ease, opacity 0.3s ease;
    }

        .article-image:hover {
            transform: scale(1.05);
            opacity: 0.9;
        }

    /* Star Rating Styling */
    .star-rating {
        font-size: 1em;
    }
</style>
