@model SEP490_G87_Vita_Nutrient_System_Client.Models.ArticlesNews
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
<link rel="stylesheet" href="/css/news/create.css" />

<div class="container">
    <h2 class="page-title">Tạo mới bài viết</h2>

    <form asp-controller="News" asp-action="Create" method="post" enctype="multipart/form-data" class="create-form">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Tiêu đề</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NameCreater" class="control-label">Người tạo</label>
            <input asp-for="NameCreater" class="form-control" />
            <span asp-validation-for="NameCreater" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateCreated" class="control-label">Ngày tạo</label>
            <input asp-for="DateCreated" class="form-control" type="date" />
            <span asp-validation-for="DateCreated" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsActive" class="control-label">Trạng thái</label>
            <select asp-for="IsActive" class="form-control">
                <option value="true">Hoạt động</option>
                <option value="false">Không hoạt động</option>
            </select>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HeaderImage" class="control-label">Hình ảnh đầu bài</label>
            <input asp-for="HeaderImage" type="file" class="form-control" />
            <small class="text-muted">Vui lòng chọn ảnh có kích cỡ nằm ngang theo tỷ lệ 4:3 để hiển thị tối ưu nhất.</small>
            <span asp-validation-for="HeaderImage" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Content" class="control-label">Nội dung</label>
            <textarea asp-for="Content" id="Content" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group action-buttons">
            <input type="submit" value="Tạo bài viết" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </form>
</div>
<script src="https://cdn.ckeditor.com/ckeditor5/35.3.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Content'))
        .catch(error => {
            console.error(error);
        });
</script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
