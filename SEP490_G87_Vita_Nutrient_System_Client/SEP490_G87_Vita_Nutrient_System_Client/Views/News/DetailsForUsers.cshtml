@model SEP490_G87_Vita_Nutrient_System_Client.Models.ArticlesNewsDTO
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

<div class="container">
    <div class="header-section">
        <h2 class="page-title">@Model.Title</h2>
        <div class="row details-row">
            <div class="col-sm-6">
                <strong>Người tạo:</strong> @Model.NameCreater
            </div>
            <div class="col-sm-6 text-right">
                <strong>Ngày tạo:</strong> @Model.DateCreated?.ToString("dd/MM/yyyy")
            </div>
        </div>
    </div>

    <div class="content-section">
        <dd class="col-sm-12">
            @Html.Raw(Model.Content)
        </dd>
    </div>

    <div class="action-links text-right">
        <a asp-action="IndexForUsers" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>

<style>
    /* Global Font Styling */
    body {
        font-family: 'Roboto', sans-serif;
    }

    /* Container Styling */
    .container {
        max-width: 80%;
        margin: 30px auto;
        padding: 20px;
        background-color: #fdfdfd;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

    /* Page Title Styling */
    .page-title {
        font-family: 'Roboto', sans-serif;
        font-size: 28px;
        font-weight: 700;
        color: #0056D2;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Details Row Styling */
    .details-row {
        font-family: 'Roboto', sans-serif;
        margin-bottom: 20px;
        color: #555;
    }

        .details-row div {
            margin-bottom: 10px;
            font-weight: 500;
        }

    .text-right {
        text-align: right;
    }

    /* Content Section Styling */
    .content-section {
        background-color: #f7f9fc;
        padding: 20px;
        border-radius: 8px;
        box-shadow: inset 0 4px 10px rgba(0, 0, 0, 0.05);
        margin-top: 20px;
    }

        .content-section img {
        display: block;
        margin: 0 auto; /* Căn giữa hình ảnh */
        max-width: 100%; /* Đảm bảo ảnh không vượt quá kích thước khung */
    }


    .content-text {
        font-size: 16px;
        color: #333;
        line-height: 1.6;
    }

    /* Action Links Styling */
    .action-links {
        margin-top: 30px;
    }

    .btn-secondary {
        background-color: #0056D2;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
        text-decoration: none;
        font-family: 'Roboto', sans-serif;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #0041a8;
        }
</style>
