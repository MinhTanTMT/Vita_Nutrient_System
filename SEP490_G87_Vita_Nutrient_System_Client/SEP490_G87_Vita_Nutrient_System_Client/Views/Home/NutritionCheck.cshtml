@model SEP490_G87_Vita_Nutrient_System_Client.Models.BMIResult
<div class="container nutrition-check">
    <h2>KIỂM TRA CHỈ SỐ BMI</h2>
    <div class="divider"></div>
    <p class="sub-text">Vui lòng điền đầy đủ thông tin</p>

    <form asp-action="NutritionCheck" method="post">
        <div class="form-row">
            <div class="form-group">
                <input type="date" name="birthDate" placeholder="Ngày sinh vd: 19/05/1890(*)" required value="@ViewBag.BirthDate" />
            </div>
            <div class="form-group">
                <select name="gender" required>
                    @if (ViewBag.Gender == "Nữ")
                    {
                        <option value="Nam">Nam</option>
                        <option value="Nữ" selected>Nữ</option>
                    }
                    else
                    {
                        <option value="Nam" selected>Nam</option>
                        <option value="Nữ">Nữ</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <input type="number" name="weight" placeholder="Nhập cân nặng (kg)" step="0.1" required value="@ViewBag.Weight" />
            </div>
            <div class="form-group">
                <input type="number" name="height" placeholder="Nhập chiều cao (cm)" step="0.1" required value="@ViewBag.Height" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary">KIỂM TRA</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.AgeError))
    {
        <div class="alert alert-danger">
            @ViewBag.AgeError
        </div>
    }

    @if (Model != null && Model.BMI > 0)
    {
        @if (Model != null && Model.BMI > 0)
        {
            <div class="result-section">
                <h3>Kết Quả Kiểm Tra BMI</h3>
                @if (ViewBag.Age >= 19)
                {
                    <p>Chỉ số BMI của bạn: <span class="bmi-value">@Model.BMI</span></p>
                }
                else
                {
                    <p>Chỉ số BMI của bạn: <span class="bmi-value">@Model.BMI</span></p>
                    <p>Phân vị BMI của bạn: <span class="bmi-value">@Model.Percentile</span> (th percentile)</p>
                }
                <p>Đánh giá: <span class="status">@Model.Status</span></p>
                <p>Phạm vi: <span class="evaluation">@Model.Evaluation</span></p>
                <p>Giới tính: <span class="gender"><strong>@Model.Gender</strong></span></p>
                <p>Tuổi của bạn: <span class="age"><strong>@ViewBag.Age</strong></span></p>
                <p>
                    Phương pháp đánh giá:
                    <span class="evaluation-method">
                        @if (ViewBag.Age >= 19)
                        {
                            @:Dành cho người trưởng thành
                        }
                        else
                        {
                            @:Dành cho trẻ em và thanh thiếu niên
                        }
                    </span>
                </p>

                <!-- Bảng chỉ số BMI dành cho người trưởng thành -->
                @if (ViewBag.Age >= 19)
                {
                    @if (ViewBag.Gender == "Nam")
                    {
                        <h4>Bảng Chỉ Số BMI Tham Khảo Cho Nam</h4>
                        <table class="bmi-table">
                            <thead>
                                <tr>
                                    <th>Phân loại</th>
                                    <th>BMI</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>GẦY ĐỘ III</td>
                                    <td>&lt; 16 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>GẦY ĐỘ II</td>
                                    <td>16 Kg/m² - &lt; 17 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>GẦY ĐỘ I</td>
                                    <td>17 Kg/m² - &lt; 18.5 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>BÌNH THƯỜNG</td>
                                    <td>18.5 Kg/m² - &lt; 23 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>THỪA CÂN</td>
                                    <td>23 Kg/m² - &lt; 25 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>BÉO PHÌ ĐỘ I</td>
                                    <td>25 Kg/m² - &lt; 30 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>BÉO PHÌ ĐỘ II</td>
                                    <td>30 Kg/m² - &lt; 35 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>BÉO PHÌ ĐỘ III</td>
                                    <td>≥ 35 Kg/m²</td>
                                </tr>
                            </tbody>
                        </table>
                    }
                    else if (ViewBag.Gender == "Nữ")
                    {
                        <h4>Bảng Chỉ Số BMI Tham Khảo Cho Nữ</h4>
                        <table class="bmi-table">
                            <thead>
                                <tr>
                                    <th>Phân loại</th>
                                    <th>BMI</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>GẦY ĐỘ III</td>
                                    <td>&lt; 15.5 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>GẦY ĐỘ II</td>
                                    <td>15.5 Kg/m² - &lt; 16.5 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>GẦY ĐỘ I</td>
                                    <td>16.5 Kg/m² - &lt; 18 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>BÌNH THƯỜNG</td>
                                    <td>18 Kg/m² - &lt; 22.5 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>THỪA CÂN</td>
                                    <td>22.5 Kg/m² - &lt; 24.5 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>BÉO PHÌ ĐỘ I</td>
                                    <td>24.5 Kg/m² - &lt; 29.5 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>BÉO PHÌ ĐỘ II</td>
                                    <td>29.5 Kg/m² - &lt; 34.5 Kg/m²</td>
                                </tr>
                                <tr>
                                    <td>BÉO PHÌ ĐỘ III</td>
                                    <td>≥ 34.5 Kg/m²</td>
                                </tr>
                            </tbody>
                        </table>
                    }
                }
                else
                {
                    <!-- Bảng chỉ số BMI dành cho trẻ em và thanh thiếu niên -->
                    <h4>Bảng Chỉ Số BMI Tham Khảo Cho Trẻ Em và Thanh Thiếu Niên</h4>
                    <table class="bmi-table">
                        <thead>
                            <tr>
                                <th>Phân loại</th>
                                <th>Phần trăm phân vị</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Thiếu cân</td>
                                <td>Dưới 5th percentile</td>
                            </tr>
                            <tr>
                                <td>Bình thường</td>
                                <td>5th đến dưới 85th percentile</td>
                            </tr>
                            <tr>
                                <td>Nguy cơ thừa cân</td>
                                <td>85th đến dưới 95th percentile</td>
                            </tr>
                            <tr>
                                <td>Thừa cân</td>
                                <td>Trên 95th percentile</td>
                            </tr>
                        </tbody>
                    </table>
                    <p class="data-source">
                        <em>Thông tin phân vị BMI được lấy từ nguồn <strong>WHO Growth Reference Data for 5–19 Years</strong>.</em>
                    </p>
                }

            </div>
        }

    }

    <div class="note">
        <p>
            <span class="icon">📋</span> <span class="warning">LƯU Ý:</span> Phần mềm <span class="highlight">ĐÁNH GIÁ TÌNH TRẠNG DINH DƯỠNG</span> này áp dụng cho cả trẻ em, thanh thiếu niên và người trưởng thành. Đối với trẻ nhỏ, việc đánh giá dinh dưỡng phụ thuộc vào yếu tố chiều cao, cân nặng và độ tuổi cụ thể. Bố mẹ vui lòng tham khảo ý kiến của chuyên gia dinh dưỡng hoặc bác sĩ để được tư vấn chính xác tình trạng dinh dưỡng của trẻ.
        </p>
    </div>
</div>


<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 80%;
        margin: 0 auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-top: 4px solid #3333ff;
    }

    .divider {
        width: 100%;
        height: 1px;
        background-color: #3333ff; /* Màu xanh đậm */
        margin: 10px 0 20px; /* Khoảng cách trên và dưới */
    }


    .nutrition-check h2 {
        color: #3333ff;
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 5px;
        text-align: center;
    }

    .sub-text {
        color: #666;
        font-size: 14px;
        text-align: center;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .form-row {
        display: flex;
        gap: 20px;
        width: 100%;
    }

    .form-group {
        flex: 1 1 50%;
    }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            outline: none;
        }

            .form-group input::placeholder {
                color: #aaa;
            }

            .form-group input:focus,
            .form-group select:focus {
                border-color: #3333ff;
                box-shadow: 0 0 5px rgba(51, 51, 255, 0.2);
            }

    .btn-primary {
        width: 100%;
        background-color: #3333ff;
        color: blue;
        padding: 10px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 20px;
        text-align: center;
    }

    .btn-check:hover {
        background-color: #0000cc;
    }

    .note {
        background-color: #f9f9ff; /* Màu nền nhẹ nhàng */
        border-left: 4px solid #3333ff; /* Viền bên trái màu xanh đậm */
        padding: 15px;
        border-radius: 5px;
        margin-top: 20px;
        font-size: 14px;
        color: #333; /* Màu chữ */
    }

        .note .icon {
            font-size: 20px;
            margin-right: 8px;
            color: #3333ff;
            vertical-align: middle;
        }

        .note .warning {
            font-weight: bold;
            color: #cc0000;
        }

        .note .highlight {
            font-weight: bold;
            color: red;
        }

        .note strong {
            color: red;
        }

    .result-section {
        margin-top: 30px;
        text-align: center;
    }

        .result-section h3 {
            font-family: 'Roboto', sans-serif;
            font-size: 20px;
            color: #3333ff;
            margin-bottom: 15px;
            font-weight: bold;
        }

        .result-section h4 {
            font-family: 'Roboto', sans-serif;
            font-size: 20px;
            color: #3333ff;
            margin-bottom: 15px;
            font-weight: bold;
        }

    .bmi-value {
        color: #007bff;
        font-weight: bold;
        font-size: 24px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }

    .status {
        font-family: 'Roboto', sans-serif;
        color: #28a745;
        font-weight: bold;
        font-size: 20px;
        padding: 5px 10px;
        background-color: rgba(40, 167, 69, 0.1);
        border-radius: 5px;
        display: inline-block;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }

    .evaluation {
        color: #ff5722;
        font-weight: bold;
        font-size: 20px;
        padding: 5px 10px;
        background-color: rgba(255, 193, 7, 0.1);
        border-radius: 5px;
        display: inline-block;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }

    .gender {
        color: #6c757d;
        font-weight: 500;
        font-style: italic;
        font-size: 18px;
    }

    .age {
        color: #17a2b8;
        font-weight: 500;
        font-size: 18px;
        padding: 2px 8px;
        background-color: rgba(23, 162, 184, 0.1);
        border-radius: 5px;
        display: inline-block;
    }

    .evaluation-method {
        font-family: 'Roboto', sans-serif;
        color: #343a40;
        font-weight: 600;
        font-size: 18px;
        background-color: rgba(52, 58, 64, 0.05);
        padding: 5px 10px;
        border-radius: 5px;
        display: inline-block;
    }

    .bmi-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .bmi-table th, .bmi-table td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .bmi-table th {
            background-color: #3333ff;
            color: #fff;
        }

        .bmi-table td {
            background-color: #f9f9ff;
        }

        .bmi-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    .data-source {
        font-size: 14px;
        color: #666;
        margin-top: 15px;
        text-align: center;
    }

        .data-source em {
            font-style: italic;
            color: #333;
        }

        .data-source strong {
            font-weight: bold;
            color: #3333ff;
        }

</style>
