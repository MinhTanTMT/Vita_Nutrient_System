        display: inline-block;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }

    .gender {
        color: #6c757d;
        font-weight: 500;
        font-style: italic;
        font-size: 18px;
    }

    .age {
        color: #17a2b8;
        font-weight: 500;
        font-size: 18px;
        padding: 2px 8px;
        background-color: rgba(23, 162, 184, 0.1);
        border-radius: 5px;
        display: inline-block;
    }

    .evaluation-method {
        font-family: 'Roboto', sans-serif;
        color: #343a40;
        font-weight: 600;
        font-size: 18px;
        background-color: rgba(52, 58, 64, 0.05);
        padding: 5px 10px;
        border-radius: 5px;
        display: inline-block;
    }

</style>
