@{
    List<User> listNutritionists = ViewBag.listNutritionists;
}

<div class="row" style="width: 100%;">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">List Nutritionists</h4>

                @if (listNutritionists == null || listNutritionists.Count == 0)
                {
                    <h1>There is no nutritionist.</h1>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Account </th>
                                    <th> Full name </th>
                                    <th> Address </th>
                                    <th> Phone </th>
                                    <th> Status </th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < listNutritionists.Count; i++)
                                {
                                    User u = listNutritionists[i];
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>@u.Account</td>
                                        <td>@u.FirstName @u.LastName</td>
                                        <td> @u.Address </td>
                                        <td> @u.Phone </td>
                                        <td>
                                            @if (u.IsActive == true)
                                            {
                                                <label class="badge badge-gradient-success">Active</label>
                                            }
                                            else
                                            {
                                                <label class="badge badge-gradient-danger">Inactive</label>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn-link" asp-controller="Admin" asp-action="NutritionistDetail" asp-route-nutritionistId="@u.UserId">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>