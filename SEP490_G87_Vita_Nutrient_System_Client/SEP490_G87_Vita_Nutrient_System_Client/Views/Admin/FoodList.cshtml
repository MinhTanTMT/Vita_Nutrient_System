@model SEP490_G87_Vita_Nutrient_System_Client.Models.FoodListViewModel

<div class="container my-5">
    <div class="mb-5">

        <!-- Tiêu đề và nút Tạo mới ở phía trên -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Danh sách món ăn</h3>
            <div class="input-group" style="max-width: 300px;">
                <form method="get" action="@Url.Action("FoodList", "Admin")" class="d-flex">
                    <input type="text" name="search" class="form-control" placeholder="Tìm kiếm món ăn..." value="@Context.Request.Query["search"]">
                    <button class="btn btn-outline-secondary" type="submit">
                        <p>Tìm kiếm</p>
                    </button>
                </form>
            </div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createFoodModal">
                Tạo món ăn mới
            </button>
            <p class="text-alert">@ViewBag.CreateFoodAlert</p>
        </div>

        <!-- Modal Tạo món ăn -->
        <div class="modal fade" id="createFoodModal" tabindex="-1" aria-labelledby="createFoodModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createFoodModalLabel">Tạo món ăn mới</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                    </div>
                    <form id="saveFoodForm" asp-action="SaveFood" method="post" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Tên:</label>
                                    <input type="text" class="form-control" name="Name" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Mô tả:</label>
                                    <input type="text" class="form-control" name="Describe" required />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Đánh giá:</label>
                                    <input type="text" class="form-control" name="Rate" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Số lượng đánh giá:</label>
                                    <input type="number" class="form-control" name="NumberRate" required />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" for="foodTypeId">Loại món ăn:</label>
                                    <select id="foodTypeId" name="FoodTypeId" class="form-select" required>
                                        @foreach (var type in Model.FoodTypes)
                                        {
                                            <option value="@type.FoodTypeId">@type.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" for="keyNoteId">Ghi chú:</label>
                                    <select id="keyNoteId" name="KeyNoteId" class="form-select" required>
                                        @foreach (var type in Model.KeyNotes)
                                        {
                                            <option value="@type.Id">@type.KeyList</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <input type="checkbox" hidden checked class="form-check-input" name="IsActive" id="isActiveCheckbox">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Thời gian chuẩn bị:</label>
                                    <input type="number" class="form-control" name="PreparationTime" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Thời gian nấu:</label>
                                    <input type="number" class="form-control" name="CookingTime" required />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" for="cookingDifficultyId">Độ khó nấu:</label>
                                    <select id="cookingDifficultyId" name="CookingDifficultyId" class="form-select" required>
                                        @foreach (var type in Model.CookingDifficulties)
                                        {
                                            <option value="@type.Id">@type.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" for="imageFile">Tải lên hình ảnh:</label>
                                    <input type="file" class="form-control" name="ImageFile" accept=".jpg,.jpeg,.png,.gif" required />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-primary">Tạo món ăn</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Bảng danh sách món ăn -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Hình ảnh</th>
                        <th>Tên</th>
                        <th>Mô tả</th>
                        <th>Đánh giá</th>
                        <th>Số lượng đánh giá</th>
                        <th>Loại món ăn</th>
                        <th>Ghi chú</th>
                        <th>Thời gian chuẩn bị</th>
                        <th>Thời gian nấu</th>
                        <th>Độ khó</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var food in Model.Foods)
                    {
                        <tr>
                            <td>@food.FoodListId</td>
                            <td>
                                <a href="javascript:void(0);" onclick="window.location.href = '/foodDetails/@food.FoodListId';">
                                    <img src="@food.UrlImage" alt="Hình ảnh món ăn" style="width: 100px; height: auto;">
                                </a>
                            </td>
                            <td>@food.Name</td>
                            <td>@food.Describe</td>
                            <td>@food.Rate</td>
                            <td>@food.NumberRate</td>
                            <td>@food.FoodTypeName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(food.KeyNoteName))
                                {
                                    @foreach (var line in food.KeyNoteName.Split('#').Where(s => !string.IsNullOrWhiteSpace(s)))
                                    {
                                        <div>• @line</div>
                                    }
                                }
                            </td>
                            <td>@food.PreparationTime</td>
                            <td>@food.CookingTime</td>
                            <td>@food.CookingDifficultyName</td>
                            <td>
                                <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#updateFoodModal_@food.FoodListId">
                                    Cập nhật
                                </button>
                                @if (food.IsActive == true)
                                {
                                    <button type="button" class="btn btn-danger btn-sm" onclick="deleteFood(@food.FoodListId)">
                                        Vô hiệu hóa
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-danger btn-sm" onclick="deleteFood(@food.FoodListId)">
                                        Kích hoạt
                                    </button>
                                }

                                <!-- Modal Cập nhật món ăn -->
                                <div class="modal fade" id="updateFoodModal_@food.FoodListId" tabindex="-1" aria-labelledby="updateFoodModalLabel_@food.FoodListId" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="updateFoodModalLabel@food.FoodListId">Cập nhật món ăn</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                            </div>
                                            <form asp-action="SaveFood" method="post">
                                                <div class="modal-body">
                                                    <input type="hidden" name="FoodListId" value="@food.FoodListId" />
                                                    <div class="mb-3">
                                                        <label class="form-label">Tên:</label>
                                                        <input type="text" class="form-control" name="Name" value="@food.Name" required />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Mô tả:</label>
                                                        <input type="text" class="form-control" name="Describe" value="@food.Describe" required />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Đánh giá:</label>
                                                        <input type="text" class="form-control" name="Rate" value="@food.Rate" required />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Số lượng đánh giá:</label>
                                                        <input type="number" class="form-control" name="NumberRate" value="@food.NumberRate" required />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label" for="foodTypeId">Loại món ăn:</label>
                                                        <select id="foodTypeId" name="foodTypeId" class="form-control">
                                                            @foreach (var type in Model.FoodTypes)
                                                            {
                                                                if (type.FoodTypeId == food.FoodTypeId)
                                                                {
                                                                    <option value="@type.FoodTypeId" selected="selected">@type.Name</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@type.FoodTypeId">@type.Name</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label" for="keyNoteId">Ghi chú:</label>
                                                        <select id="keyNoteId" name="keyNoteId" class="form-control">
                                                            @foreach (var type in Model.KeyNotes)
                                                            {
                                                                if (type.Id == food.KeyNoteId)
                                                                {
                                                                    <option value="@type.Id" selected="selected">@type.KeyList</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@type.Id">@type.KeyList</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Url Hình ảnh</label>
                                                        <input type="text" class="form-control" name="UrlImage" value="@food.UrlImage" required />
                                                    </div>
                                                    <input type="checkbox" hidden checked class="form-check-input" name="IsActive" id="isActiveCheckbox">
                                                    <div class="mb-3">
                                                        <label class="form-label">Thời gian chuẩn bị:</label>
                                                        <input type="number" class="form-control" name="PreparationTime" value="@food.PreparationTime" required />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Thời gian nấu:</label>
                                                        <input type="number" class="form-control" name="CookingTime" value="@food.CookingTime" required />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label" for="cookingDifficultyId">Độ khó nấu:</label>
                                                        <select id="cookingDifficultyId" name="cookingDifficultyId" class="form-control">
                                                            @foreach (var type in Model.CookingDifficulties)
                                                            {
                                                                if (type.Id == food.CookingDifficultyId)
                                                                {
                                                                    <option value="@type.Id" selected="selected">@type.Name</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@type.Id">@type.Name</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#recipeModal_@food.FoodListId">
                                    Công thức
                                </button>

                                <!-- Modal Công thức -->
                                <div class="modal fade" id="recipeModal_@food.FoodListId" tabindex="-1" aria-labelledby="recipeModalLabel_@food.FoodListId" aria-hidden="true">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="recipeModalLabel_@food.FoodListId">Công thức cho @food.Name</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div>
                                                    @if (Model.RecipesByFood.ContainsKey(food.FoodListId))
                                                    {
                                                        var recipes = Model.RecipesByFood[food.FoodListId];
                                                        if (recipes.Any())
                                                        {
                                                            foreach (var recipe in recipes)
                                                            {
                                                                <div class="card mb-2">
                                                                    <div class="card-body d-flex justify-content-between align-items-center">
                                                                        <div>
                                                                            <strong>Thứ tự:</strong> @recipe.NumericalOrder<br>
                                                                            <strong>Mô tả:</strong> @recipe.Describe
                                                                        </div>
                                                                        <div>
                                                                            <img src="@recipe.Urlimage" alt="Hình ảnh công thức" style="width: 100px; height: 100px; object-fit: cover;">
                                                                        </div>
                                                                        <button class="btn btn-warning btn-sm" onclick="showEditRecipeModal(@food.FoodListId, @recipe.RecipeId, '@recipe.Describe', '@recipe.Urlimage')">
                                                                            Chỉnh sửa
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <p>Không tìm thấy công thức cho món ăn này.</p>
                                                        }
                                                    }
                                                </div>
                                                <button class="btn btn-success mt-3" onclick="showCreateRecipeModal(@food.FoodListId)">Tạo công thức</button>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-primary btn-sm" onclick="window.location.href='/admin/foodmanagement/foodingredient/@food.FoodListId'">
                                    Tính toán lượng
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Điều khiển phân trang -->
        <nav aria-label="Điều hướng trang">
            <ul class="pagination justify-content-center">
                @if (ViewBag.FoodCurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("FoodList", new { search = ViewBag.FoodSearch, foodPage = ViewBag.FoodCurrentPage - 1 })">Trước</a>
                    </li>
                }
                @for (int i = 1; i <= ViewBag.FoodTotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.FoodCurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("FoodList", new { search = ViewBag.FoodSearch, foodPage = i })">@i</a>
                    </li>
                }
                @if (ViewBag.FoodCurrentPage < ViewBag.FoodTotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("FoodList", new { search = ViewBag.FoodSearch, foodPage = ViewBag.FoodCurrentPage + 1 })">Tiếp theo</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
    <div>
        <h3>Danh sách bệnh</h3>

        <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#createDiseaseModal">
            Tạo bệnh
        </button>

        <!-- Modal Tạo bệnh -->
        <div class="modal fade" id="createDiseaseModal" tabindex="-1" aria-labelledby="createDiseaseModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createDiseaseModalLabel">Tạo bệnh mới</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                    </div>
                    <form asp-action="SaveDisease" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="Id" value="0" /> <!-- Đặt Id là 0 để tạo mới -->
                            <div class="mb-3">
                                <label class="form-label">Tên:</label>
                                <input type="text" class="form-control" name="Name" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mô tả:</label>
                                <input type="text" class="form-control" name="Describe" required />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-primary">Tạo bệnh</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="input-group mb-3" style="max-width: 300px;">
            <form method="get" action="@Url.Action("FoodList", "Admin")" class="d-flex">
                <input type="text" name="diseaseSearch" class="form-control" placeholder="Tìm kiếm bệnh..." value="@Context.Request.Query["diseaseSearch"]">
                <button class="btn btn-outline-secondary" type="submit">
                    <p>Tìm kiếm</p>
                </button>
            </form>
        </div>

        <!-- Bảng danh sách bệnh với các cột căn chỉnh -->
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Tên</th>
                    <th>Mô tả</th>
                    <!-- Các cột trống để căn chỉnh với bảng danh sách món ăn -->
                    <th colspan="8"></th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var disease in Model.ListOfDiseases)
                {
                    <tr>
                        <td>@disease.Name</td>
                        <td>@disease.Describe</td>
                        <!-- Các ô trống để căn chỉnh với bảng danh sách món ăn -->
                        <td colspan="8"></td>
                        <td>
                            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#updateDiseaseModal_@disease.Id">
                                Cập nhật
                            </button>
                            <!-- Modal Cập nhật bệnh -->
                            <div class="modal fade" id="updateDiseaseModal_@disease.Id" tabindex="-1" aria-labelledby="updateDiseaseModalLabel_@disease.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="updateDiseaseModalLabel@disease.Id">Cập nhật bệnh</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                        </div>
                                        <form asp-action="SaveDisease" method="post">
                                            <div class="modal-body">
                                                <input type="hidden" name="Id" value="@disease.Id" />
                                                <div class="mb-3">
                                                    <label class="form-label">Tên:</label>
                                                    <input type="text" class="form-control" name="Name" value="@disease.Name" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Mô tả:</label>
                                                    <input type="text" class="form-control" name="Describe" value="@disease.Describe" required />
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <nav aria-label="Điều hướng trang bệnh">
        <ul class="pagination justify-content-center">
            @if (ViewBag.DiseaseCurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("FoodList", new { search = ViewBag.DiseaseSearch, diseasePage = ViewBag.DiseaseCurrentPage - 1 })">Trước</a>
                </li>
            }
            @for (int i = 1; i <= ViewBag.DiseaseTotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.DiseaseCurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("FoodList", new { search = ViewBag.DiseaseSearch, diseasePage = i })">@i</a>
                </li>
            }
            @if (ViewBag.DiseaseCurrentPage < ViewBag.DiseaseTotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("FoodList", new { search = ViewBag.DiseaseSearch, diseasePage = ViewBag.DiseaseCurrentPage + 1 })">Tiếp theo</a>
                </li>
            }
        </ul>
    </nav>
    <div>
        <h3 class="mt-5">Món ăn và bệnh</h3>

        <!-- Nút mở Modal Tạo món ăn và bệnh -->
        <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#createFoodAndDiseaseModal">
            Tạo món ăn và bệnh
        </button>

        <!-- Modal Tạo món ăn và bệnh -->
        <div class="modal fade" id="createFoodAndDiseaseModal" tabindex="-1" aria-labelledby="createFoodAndDiseaseModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createFoodAndDiseaseModalLabel">Tạo món ăn và bệnh mới</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                    </div>
                    <form asp-action="SaveFoodAndDisease" method="post">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Bệnh:</label>
                                <select class="form-control" name="ListOfDiseasesId" required>
                                    <!-- Điền các tùy chọn từ danh sách bệnh -->
                                    @foreach (var disease in Model.ListOfDiseases)
                                    {
                                        <option value="@disease.Id">@disease.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Món ăn:</label>
                                <select class="form-control" name="FoodListId" required>
                                    <!-- Điền các tùy chọn từ danh sách món ăn -->
                                    @foreach (var food in Model.Foods)
                                    {
                                        <option value="@food.FoodListId">@food.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mô tả:</label>
                                <input type="text" class="form-control" name="Describe" required />
                            </div>
                            <div class="mb-3 form-check">
                                <input class="form-check-input" type="checkbox" name="IsGoodOrBad" value="true" id="isGoodOrBad">
                                <label class="form-check-label" for="isGoodOrBad">Tốt cho bệnh</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-primary">Tạo</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Bảng Món ăn và bệnh -->
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Tên bệnh</th>
                    <th>Mô tả bệnh</th>
                    <th>Tên món ăn</th>
                    <th>Mô tả món ăn</th>
                    <th>Mô tả</th>
                    <th>Tốt hay xấu</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FoodAndDiseases)
                {
                    <tr>
                        <td>@item.DiseaseName</td>
                        <td>@item.DiseaseDescribe</td>
                        <td>@item.FoodName</td>
                        <td>@item.FoodDescribe</td>
                        <td>@item.Describe</td>
                        <td>
                            @if (item.IsGoodOrBad)
                            {
                                <span class="badge bg-success">Tốt</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Xấu</span>
                            }
                        </td>
                        <td>
                            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#updateFoodAndDiseaseModal_@item.FoodListId-@item.ListOfDiseasesId">
                                Cập nhật
                            </button>
                            <div class="modal fade" id="updateFoodAndDiseaseModal_@item.FoodListId-@item.ListOfDiseasesId" tabindex="-1" aria-labelledby="updateFoodAndDiseaseModalLabel_@item.FoodListId-@item.ListOfDiseasesId" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="updateDiseaseModalLabel@disease.Id">Cập nhật bệnh</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                        </div>
                                        <form asp-action="SaveFoodAndDisease" method="post">
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label class="form-label">Bệnh:</label>
                                                    <select class="form-control" name="ListOfDiseasesId" required>
                                                        <!-- Điền các tùy chọn từ danh sách bệnh -->
                                                        @foreach (var disease in Model.ListOfDiseases)
                                                        {
                                                            if (disease.Id == item.ListOfDiseasesId)
                                                            {
                                                                <option value="@disease.Id" selected="selected">@item.DiseaseName</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@disease.Id">@disease.Name</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Món ăn:</label>
                                                    <select class="form-control" name="FoodListId" required>
                                                        <!-- Điền các tùy chọn từ danh sách món ăn -->
                                                        @foreach (var food in Model.Foods)
                                                        {
                                                            if (food.FoodListId == item.FoodListId)
                                                            {
                                                                <option value="@food.FoodListId" selected="selected">@item.FoodListId</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@food.FoodListId">@food.Name</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Mô tả:</label>
                                                    <input type="text" value="@item.Describe" class="form-control" name="Describe" required />
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="IsGoodOrBad" value="true" id="isGoodOrBad" @(item.IsGoodOrBad ? "checked" : "")>
                                                    <label class="form-check-label" for="isGoodOrBad">Tốt cho bệnh</label>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                <button type="submit" class="btn btn-primary">Cập nhật</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Điều khiển phân trang cho Món ăn và bệnh -->
        <nav aria-label="Điều hướng trang Món ăn và bệnh">
            <ul class="pagination justify-content-center">
                @if (ViewBag.FandDCurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("FoodList", new {fAndDPage = ViewBag.FandDCurrentPage - 1 })">Trước</a>
                    </li>
                }
                @for (int i = 1; i <= ViewBag.FandDTotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.FandDCurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("FoodList", new {fAndDPage = i })">@i</a>
                    </li>
                }
                @if (ViewBag.FandDCurrentPage < ViewBag.FandDTotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("FoodList", new {fAndDPage = ViewBag.FandDCurrentPage + 1 })">Tiếp theo</a>
                    </li>
                }
            </ul>
        </nav>
    </div>

</div>
<script>
    async function deleteFood(foodId) {
        const confirmed = confirm("Bạn có chắc muốn đổi trạng thái của món ăn này?");
        if (!confirmed) return;

        try {
            const response = await fetch(`@Model.apiUrl/Nutrition/FoodList/${foodId}`, {
                method: 'DELETE'
            });

            if (response.ok) {
                alert("Đổi trạng thái thành công!");
                location.reload();
            } else {
                alert("Có lỗi xảy ra khi đổi trạng thái món ăn.");
                console.error("Đổi trạng thái thất bại:", await response.text());
            }
        } catch (error) {
            console.error("Lỗi khi đổi trạng thái món ăn:", error);
            alert("Có lỗi xảy ra khi đổi trạng thái món ăn.");
        }
    }

    async function loadRecipes(foodId) {
        const url = `@Model.apiUrl/Food/GetFoodRecipe/${foodId}`;
        const response = await fetch(url);

        if (response.ok) {
            const recipes = await response.json();
            const recipeListContainer = document.getElementById(`recipeList_${foodId}`);
            recipeListContainer.innerHTML = recipes.map(recipe => `
                                        <div class="card mb-2">
                                            <div class="card-body d-flex justify-content-between align-items-center">
                                                <div>
                                                    <strong>Thứ tự:</strong> ${recipe.numericalOrder}<br>
                                                    <strong>Mô tả:</strong> ${recipe.describe}
                                                </div>
                                                <div>
                                                    <img src="${recipe.urlimage}" alt="Hình ảnh công thức" style="width: 100px; height: 100px; object-fit: cover;">
                                                </div>
                                                <button class="btn btn-warning btn-sm" onclick="showEditRecipeModal(${foodId}, ${recipe.recipeId}, '${recipe.describe}', '${recipe.urlimage}', ${recipe.numericalOrder})">
                                                    Chỉnh sửa
                                                </button>
                                            </div>
                                        </div>
                                    `).join('');
        } else {
            alert('Không tải được công thức.');
        }
    }

    async function showCreateRecipeModal(foodId) {
        const modalHtml = `
                                        <div class="modal fade" id="createRecipeModal" tabindex="-1" aria-labelledby="createRecipeModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <form id="createRecipeForm" onsubmit="createRecipe(event, ${foodId})">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Tạo công thức</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <input type="hidden" name="numericalOrder" id="createNumericalOrder">
                                                            <div class="mb-3">
                                                                <label>Mô tả:</label>
                                                                <input type="text" class="form-control" name="describe" required>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label>URL Hình ảnh:</label>
                                                                <input type="url" class="form-control" name="urlimage" required>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                            <button type="submit" class="btn btn-primary">Lưu công thức</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    `;
        document.body.insertAdjacentHTML('beforeend', modalHtml);
        $('#createRecipeModal').modal('show');
    }

    async function createRecipe(event, foodId) {
        event.preventDefault();
        const form = event.target;
        const description = form.querySelector('input[name="describe"]').value;
        const urlImage = form.querySelector('input[name="urlimage"]').value;

        const recipes = await fetch(`@Model.apiUrl/Food/GetFoodRecipe/${foodId}`).then(res => res.json());
        const maxOrder = recipes.length > 0 ? Math.max(...recipes.map(r => r.numericalOrder)) : 0;

        const payload = {
            foodId: foodId,
            recipes: [{
                recipeId: 0, // Công thức mới
                foodListId: foodId,
                numericalOrder: maxOrder + 1,
                describe: description,
                urlimage: urlImage
            }]
        };

        const response = await saveRecipe(payload);
        if (response.ok) {
            alert('Tạo công thức thành công!');
            location.reload(); // Làm mới trang
        } else {
            alert('Không tạo được công thức.');
        }
    }

    async function showEditRecipeModal(foodId, recipeId, description, urlImage, numericalOrder) {
        const modalHtml = `
                                    <div class="modal fade" id="editRecipeModal" tabindex="-1" aria-labelledby="editRecipeModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form id="editRecipeForm" onsubmit="editRecipe(event, ${foodId}, ${recipeId})">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Chỉnh sửa công thức</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label>Thứ tự:</label>
                                                            <input type="number" class="form-control" name="numericalOrder" value="${numericalOrder}" required>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label>Mô tả:</label>
                                                            <input type="text" class="form-control" name="describe" value="${description}" required>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label>URL Hình ảnh:</label>
                                                            <input type="url" class="form-control" name="urlimage" value="${urlImage}" required>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                `;
        document.body.insertAdjacentHTML('beforeend', modalHtml);
        $('#editRecipeModal').modal('show');
    }

    async function showEditRecipeModal(foodId, recipeId, description, urlImage, numericalOrder) {
        // Xóa modal cũ nếu tồn tại
        const existingModal = document.getElementById('editRecipeModal');
        if (existingModal) {
            existingModal.remove();
        }

        // Tạo modal mới với dữ liệu cần chỉnh sửa
        const modalHtml = `
                                    <div class="modal fade" id="editRecipeModal" tabindex="-1" aria-labelledby="editRecipeModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form id="editRecipeForm" onsubmit="editRecipe(event, ${foodId}, ${recipeId})">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Chỉnh sửa công thức</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label>Thứ tự:</label>
                                                            <input type="number" class="form-control" name="numericalOrder" value="${numericalOrder}" required>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label>Mô tả:</label>
                                                            <input type="text" class="form-control" name="describe" value="${description}" required>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label>URL Hình ảnh:</label>
                                                            <input type="url" class="form-control" name="urlimage" value="${urlImage}" required>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                `;

        // Thêm modal vào DOM
        document.body.insertAdjacentHTML('beforeend', modalHtml);

        // Hiển thị modal
        $('#editRecipeModal').modal('show');
    }

    $(document).on('hidden.bs.modal', '#editRecipeModal', function () {
        $(this).remove();
    });

    async function saveRecipe(payload) {
        const url = '@Model.apiUrl/Food/SaveFoodRecipes';
        const response = await fetch(url, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        });

        return response; // Trả về response để kiểm tra trạng thái
    }

</script>

