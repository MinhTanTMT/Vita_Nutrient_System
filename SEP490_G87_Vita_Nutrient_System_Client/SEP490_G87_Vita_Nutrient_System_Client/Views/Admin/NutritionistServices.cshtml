@model IEnumerable<AllNutritionistServices>

<div class="container mx-auto px-6 py-10">
    <!-- Header -->
    <div class="text-center bg-green-600 text-white py-10 rounded-lg shadow-lg">
        <h1 class="text-4xl font-bold">Nâng cấp lên Premium ngay hôm nay!</h1>
        <p class="text-lg mt-4">Khám phá thêm dịch vụ dinh dưỡng chuyên sâu từ các chuyên gia hàng đầu.</p>
    </div>

    <!-- Danh sách chuyên gia -->
    <div class="mt-12 grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">

        @if (Model != null)
        {
            @foreach (var service in Model)
            {
                <div class="bg-white p-6 rounded-lg shadow-lg flex flex-col">
                    <!-- Thông tin chuyên gia -->
                    <div class="text-center mb-6">
                        <h2 class="text-2xl font-semibold text-gray-800">Chuyên gia ID: @service.NutritionistId</h2>
                        <p class="text-gray-600 mt-2 italic">"@service.DescribeYourself"</p>
                    </div>

                    <!-- Chi tiết chuyên gia -->
                    <div class="space-y-2">
                        <p class="text-gray-600"><strong>Chiều cao:</strong> @service.Height cm</p>
                        <p class="text-gray-600"><strong>Cân nặng:</strong> @service.Weight kg</p>
                        <p class="text-gray-600"><strong>Tuổi:</strong> @service.Age</p>
                        <p class="text-gray-600"><strong>Đánh giá:</strong> @service.Rate ⭐️ (dựa trên @service.NumberRate đánh giá)</p>
                    </div>

                    <!-- Danh sách gói dịch vụ -->
                    <div class="mt-6">
                        <h3 class="text-lg font-bold text-gray-800 mb-4">Gói dịch vụ:</h3>
                        <ul class="space-y-6">
                            @foreach (var package in service.ExpertPackages)
                            {
                                <li class="bg-gray-100 p-4 rounded-lg shadow-md">
                                    <h4 class="text-lg font-semibold text-gray-800">@package.Name</h4>
                                    <p class="text-gray-600 mt-2"><strong>Mô tả:</strong> @package.Describe</p>
                                    <p class="text-gray-600"><strong>Giá:</strong> @package.Price VNĐ</p>
                                    <p class="text-gray-600"><strong>Thời lượng:</strong> @package.Duration ngày</p>
                                    <form asp-controller="Admin" asp-action="PaymentForPaidServices" method="post" class="mt-4">
                                        <input type="hidden" name="NutritionistId" value="@service.NutritionistId" />
                                        <input type="hidden" name="Describe" value="@package.Describe" />
                                        <input type="hidden" name="Price" value="@package.Price" />
                                        <input type="hidden" name="Duration" value="@package.Duration" />
                                        <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium w-full">
                                            Đăng ký ngay
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        }
 
    </div>
</div>

<style>
    .container {
        max-width: 1200px;
    }

    .grid {
        display: grid;
        gap: 2rem;
    }

    .shadow-md {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .shadow-lg {
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
    }
</style>
