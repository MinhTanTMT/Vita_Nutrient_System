@model SEP490_G87_Vita_Nutrient_System_Client.Models.NutritionRoute
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">

<div class="container">
    <h2 class="page-title text-center mb-4">Tạo Lộ Trình Dinh Dưỡng Mới</h2>
    <form asp-controller="NutritionRoute" asp-action="Create" method="post" enctype="multipart/form-data" class="create-form">
        <div class="form-group">
            <label for="FullName">Họ và tên người sử dụng</label>
            <span class="user-name">@Model.FullName</span>
            <input type="hidden" asp-for="UserId" />
        </div>
        <div class="form-group">
            <label for="Name">Tên Lộ Trình</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Describe">Mô Tả</label>
            <textarea asp-for="Describe" class="form-control"></textarea>
            <span asp-validation-for="Describe" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="StartDate">Ngày Bắt Đầu</label>
            <input type="date" asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="EndDate">Ngày Kết Thúc</label>
            <input type="date" asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsDone" class="control-label">Trạng thái</label>
            <select asp-for="IsDone" class="form-control">
                <option value="true">Hoạt động</option>
                <option value="false">Không hoạt động</option>
            </select>
            <span asp-validation-for="IsDone" class="text-danger"></span>
        </div>
        <div class="form-group action-buttons text-center mb-4">
            <input type="submit" value="Tạo lộ trình" class="btn btn-primary" />
            <a asp-action="GetRouteByUser" asp-route-userId="@Model.UserId" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </form>
</div>

<style>
    .container {
        max-width: 70%;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        font-family: 'Roboto', sans-serif;
    }

    .page-title {
        color: #4CAF50;
        font-weight: 700;
        font-size: 28px;
        font-family: 'Roboto', sans-serif;
    }

    .form-label {
        font-size: 16px;
        font-weight: 500;
        color: #333;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        font-size: 16px;
        box-shadow: none;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.2);
        }

    .btn {
        font-size: 16px;
        padding: 10px 20px;
        border-radius: 8px;
        font-family: 'Roboto', sans-serif;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #4CAF50;
        border-color: #4CAF50;
        color: white;
    }

        .btn-primary:hover {
            background-color: #45a049;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .text-danger {
        font-size: 14px;
    }

    .shadow {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    .user-name {
        font-size: 1.1em;
        color: #1d4ed8;
        font-weight: 500;
        margin-left: 10px;
    }
</style>